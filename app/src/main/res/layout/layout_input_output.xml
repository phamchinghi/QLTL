<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        app:tabBackground="@drawable/custom_chip"
        app:tabIndicator="@drawable/custom_chip"
        app:tabIndicatorAnimationDuration="500"
        app:tabIndicatorColor="#C8E1F3"
        app:tabIndicatorGravity="bottom"
        app:tabMode="fixed"
        app:tabRippleColor="@color/white"
        app:tabTextColor="@color/black"
        app:tabUnboundedRipple="true"
        >

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thu" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi" />
    </com.google.android.material.tabs.TabLayout>

    <android.widget.Button
        android:id="@+id/btnList"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_below="@+id/tab_layout"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/custom_button_menu"
        android:drawableLeft="@drawable/ic_add"
        android:padding="5dp"
        android:text="Thêm mới"
        android:textAllCaps="false"
        android:layout_gravity="center"
        />

    <com.example.qltl.widget.customViewPager
        android:id="@+id/nhap_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    </com.example.qltl.widget.customViewPager>
</LinearLayout>